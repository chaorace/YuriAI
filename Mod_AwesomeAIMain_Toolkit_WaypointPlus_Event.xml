<?xml version="1.0" ?>
<enemy>
    <behaviour>
        <root x="110" y="40">
            <normal>
                <condition id="once">
                    <string id="Comment">Document events here</string>
                    <normal>
                        <action id="adjustCounter">
                            <string id="id">Toolkit_WaypointPlus_Event_LastCheckpoint</string>
                            <string id="value">-1</string>
                            <string id="adjust method" values="valueadjust">set</string>
                            <string id="Comment">The last checkpoint to be successfully arrived at</string>
                        </action>
                    </normal>
                </condition>
                <condition id="isAtDestWaypoint">
                    <string id="Comment">Have I arrived at my target destination?</string>
                    <normal>
                        <action id="adjustCounter">
                            <string id="id">Toolkit_WaypointPlus_Event_LastCheckpoint</string>
                            <string id="value">Toolkit_WaypointPlus_Trigger_TargetWaypoint</string>
                            <string id="adjust method" values="valueadjust">set</string>
                            <string id="Comment">The current target is now remembered as the last reached checkpoint</string>
                        </action>
                    </normal>
                    <else>
                        <condition id="checkCounter">
                            <string id="id">Toolkit_WaypointPlus_Trigger_TargetWaypoint</string>
                            <string id="value">-1</string>
                            <string id="compare method" values="valuecompare">equal</string>
                            <string id="Comment">Only continue if there is a target waypoint</string>
                            <else>
                                <condition id="checkCounter">
                                    <string id="id">Toolkit_WaypointPlus_Trigger_TargetWaypoint</string>
                                    <string id="value">REGENHOME_0</string>
                                    <string id="compare method" values="valuecompare">equal</string>
                                    <string id="Comment">enumerator mapping, lots of it</string>
                                    <normal>
                                        <condition id="isFromTeam">
                                            <string id="team" values="teamswithnumbers">ZERO_TEAM</string>
                                            <string id="check on" values="targetself">self</string>
                                            <normal>
                                                <action id="selectDestWaypoint">
                                                    <string id="name">REGENHOME_0</string>
                                                    <string id="team" values="ownenemy">OWN_TEAM</string>
                                                </action>
                                            </normal>
                                            <else>
                                                <action id="selectDestWaypoint">
                                                    <string id="name">REGENHOME_0</string>
                                                    <string id="team" values="ownenemy">ENEMY_TEAM</string>
                                                </action>
                                            </else>
                                        </condition>
                                    </normal>
                                    <else>
                                        <condition id="checkCounter">
                                            <string id="id">Toolkit_WaypointPlus_Trigger_TargetWaypoint</string>
                                            <string id="value">BEHINDDRILL_0</string>
                                            <string id="compare method" values="valuecompare">equal</string>
                                            <normal>
                                                <condition id="isFromTeam">
                                                    <string id="team" values="teamswithnumbers">ZERO_TEAM</string>
                                                    <string id="check on" values="targetself">self</string>
                                                    <normal>
                                                        <action id="selectDestWaypoint">
                                                            <string id="name">behindDrill_0</string>
                                                            <string id="team" values="ownenemy">OWN_TEAM</string>
                                                        </action>
                                                    </normal>
                                                    <else>
                                                        <action id="selectDestWaypoint">
                                                            <string id="name">behindDrill_0</string>
                                                            <string id="team" values="ownenemy">ENEMY_TEAM</string>
                                                        </action>
                                                    </else>
                                                </condition>
                                            </normal>
                                            <else>
                                                <condition id="checkCounter">
                                                    <string id="id">Toolkit_WaypointPlus_Trigger_TargetWaypoint</string>
                                                    <string id="value">BELLOWLAUNCH_0</string>
                                                    <string id="compare method" values="valuecompare">equal</string>
                                                </condition>
                                            </else>
                                        </condition>
                                    </else>
                                </condition>
                            </else>
                        </condition>
                    </else>
                </condition>
            </normal>
        </root>
    </behaviour>
    <behaviour>
        <condition id="checkCounter" x="3766" y="220">
            <string id="id">Toolkit_WaypointPlus_Trigger_TargetWaypoint</string>
            <string id="value">30</string>
            <string id="compare method" values="valuecompare">equal</string>
            <string id="Comment">Next stop: CENTERHP</string>
            <normal>
                <action id="adjustCounter">
                    <string id="id">Toolkit_WaypointPlus_Event_NextCheckpoint</string>
                    <string id="value">30</string>
                    <string id="adjust method" values="valueadjust">set</string>
                </action>
            </normal>
        </condition>
    </behaviour>
</enemy>
