<?xml version="1.0" ?>
<enemy>
    <behaviour>
        <root x="110" y="40">
            <normal>
                <condition id="hasTarget">
                    <string id="condition" values="yesno">yes</string>
                    <normal>
                        <condition id="isTargetInArea">
                            <string id="condition" values="yesno">no</string>
                            <float id="xOffset">0.00</float>
                            <float id="yOffset">0.00</float>
                            <float id="width">1.50</float>
                            <float id="height">1.50</float>
                            <string id="check line of sight" values="yesno">yes</string>
                            <string id="ignore invisibility" values="yesno">no</string>
                            <string id="Comment">Are my enemies out of sight?</string>
                            <normal>
                                <andblock>
                                    <normal>
                                        <condition id="getBoolEquals">
                                            <string id="id">Toolkit_Detection_Event_AreaSpawn</string>
                                            <string id="value" values="yesno">yes</string>
                                            <string id="Comment">Am I in the spawn area?</string>
                                            <else>
                                                <action id="selectDestWaypoint">
                                                    <string id="name">REGENHOME</string>
                                                    <string id="team" values="ownenemy">OWN_TEAM</string>
                                                    <string id="Comment">Set destination node to closest node to spawn</string>
                                                </action>
                                                <action id="setBool">
                                                    <string id="id">Toolkit_Pathfinding_Trigger_NodeMovement</string>
                                                    <string id="value" values="flagtoggle">yes</string>
                                                    <string id="Comment">Activate node movement</string>
                                                </action>
                                            </else>
                                        </condition>
                                    </normal>
                                    <else>
                                        <action id="selectTargetWaypoint">
                                            <string id="Comment">Set Destination Waypoint to near target</string>
                                        </action>
                                    </else>
                                    <or>
                                        <condition id="isInNamedArea">
                                            <string id="area name">STARTAREA</string>
                                            <string id="team" values="ownenemy">OWN_TEAM</string>
                                            <string id="who" values="targetself">target</string>
                                            <string id="Comment">Is my target in spawn area?</string>
                                        </condition>
                                        <condition id="isFromTeam">
                                            <string id="team" values="teamswithnumbers">OWN_TEAM</string>
                                            <string id="check on" values="targetself">target</string>
                                            <string id="Comment">Is my target an ally?</string>
                                        </condition>
                                    </or>
                                </andblock>
                                <action id="setBool">
                                    <string id="id">Toolkit_Pathfinding_Trigger_NodeMovement</string>
                                    <string id="value" values="flagtoggle">yes</string>
                                    <string id="Comment">Node Based- Movement Trigger</string>
                                </action>
                            </normal>
                            <else>
                                <condition id="getBoolEquals">
                                    <string id="id">Toolkit_Detection_Event_TargetFar</string>
                                    <string id="value" values="yesno">yes</string>
                                    <string id="Comment">Is my opponent getting too close?</string>
                                    <normal>
                                        <action id="setBool">
                                            <string id="id">Toolkit_Movement_Trigger_MoveAwayFromTarget</string>
                                            <string id="value" values="flagtoggle">yes</string>
                                        </action>
                                    </normal>
                                </condition>
                            </else>
                        </condition>
                    </normal>
                </condition>
            </normal>
        </root>
    </behaviour>
</enemy>
